  .box .getinR .btn , .singleGame .btn{ 
    height: 60%;
    width: 320rpx;
    text-align: center;
    line-height: 135rpx;
    font-size: 46rpx; 
    font-weight: 600; 
    color: cornflowerblue;
    margin-left: 23%;
    margin-top: 18%;
