  /* 欧气值弹窗部分 */

  .luckynum-box{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
  }
  .luckynum-bg{
    opacity: 0.3;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
  }
  .luckynum-toast{
    position: absolute;
    opacity: 1;
    width: 90%;
    margin-top: 40%;
  }
  .luckynum-bgin{
    height: 75%;
    width: 100%;
    overflow: hidden;
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content:baseline;
    background-image: url(http://a1.qpic.cn/psc?/V52HqGEv1SPyjw0BLhJM1MIHZD4Nu8tq/bqQfVz5yrrGYSXMvKr.cqVWfLMOrtXH7cf1cLO6UaKrUa.VXBIdlkn3i9ytTD3rYZCO0CVHpbbASNExN3rTXUePkJBD6w9Jo1gmtFzktiJU!/b&ek=1&kp=1&pt=0&bo=1AS9BtQEvQYDEDU!&tl=1&vuin=960868236&tm=1633366800&sce=60-1-1&rf=viewer_311);
    margin: 0;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    z-index: 1;
    color: white;
    text-align: center;
    padding-top: 12%;
    padding-bottom: 12%;
  }
  .luckynum-close{
    height: 13%;
  }
  .luckynum-close .luckynum-close-btn{
    height: 100%;
    width: 100rpx;
    margin-left: 80%;
    opacity: 0;
  }
  .luckynum-tltle{
    font-size: 50rpx;
    font-weight: 600;
    height: 12%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .luckynum-num{
    font-size: 120rpx;
    font-weight: 700;
    height: 18%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .luckynum-over{
    font-size: 40rpx;
    font-weight: 600;
    height: 12%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  
